page{
    background-color: #FFF;
}
.container {
  margin-top: -200rpx;
  width: 100%;
}
.cover{
  position: relative;
  width: 100%;
  height: 420rpx;
  margin: 0rpx 0rpx 0rpx 0rpx;
}
.background{
  position: absolute;
  width: 100%;
  height: 422rpx;
}
.topTab{
  z-index: 1110;
  background-color: #0F88EB;
  border: solid;
  width: 100%;
  height: 100rpx;

}
.head {
  width: 33%; 
  height: 80rpx;
  position: relative;
  float: right;
  margin: 40rpx 10rpx 30rpx 20rpx;
}
.head image{
  height: 50rpx;
  width: 50rpx;
  margin:10rpx 30rpx 10rpx 30rpx;
  opacity: 0.8;
}
.share{
  width: 40%;
  height: 98%;
  float: right;
  right: 30rpx;
  background-color: #0F88EB;
}
.share-label{
  height: 70rpx;
  position: absolute;
}
.headline{
  position: absolute;
  bottom:0rpx;
  background-color: rgba(0,0,0, 0.3);
  width: 100%;
  margin: 0;
  padding:30rpx 0rpx 10rpx 0rpx;
}
.title{
  display: block;
  font-size: larger;
  font-weight: bold;
  word-wrap:break-word;
  color: #FFF;
  padding: 0rpx 25rpx 10rpx 25rpx; 
}
.date {
  position: relative;
  width:40%;
  float: left;
  text-align: left;
  padding: 5rpx 0rpx 5rpx 20rpx;
}
.date text{
  color: rgba(225,225,225, 0.9);
  font-size: smaller;
}
.author {
  position: relative;
  width: 40%;
  float: right;
  text-align: right;
  padding: 5rpx 30rpx 5rpx 0rpx;
}
.author text{
  color: rgba(225,225,225, 0.9);
  font-size: smaller;
}
/*hit+comment图标和正文*/
.totalpaper {
  width: 100%;
  margin: 0;
  padding: 20rpx 0rpx 20rpx 0rpx;
  background-color: #FFF;
}
.works{
  width:630rpx;
  margin: 10rpx 60rpx 0rpx 60rpx;
}
.works text{
  word-wrap:break-word;
  line-height: 180%;
  font-size: 35rpx;
}
.works image{
  float: right;
  width: 95%;
  margin-bottom: 20rpx;
}
/*两个图标*/
.hitcom {
  z-index: 100;
  position: fixed;
  width: 120rpx;
  right: 20rpx;
  bottom: 80rpx;
}
.heat{
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx 0rpx 45rpx 0rpx; 
  text-align: center;
  background-color: #F85A40;
  border-radius: 50rpx;
  box-shadow: 0rpx 0rpx 2rpx 4rpx #E4E4E4;
}
.heat image{
  margin: 25rpx;
  vertical-align: middle;
  width:50rpx;
  height: 50rpx;
}
.comments{
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx 0rpx 50rpx 0rpx; 
  text-align: center;
  background-color: #0F88EB;
  border-radius: 50rpx;
  box-shadow: 0rpx 0rpx 2rpx 4rpx #E4E4E4;
}
.comments image{
  margin:  25rpx 22rpx 25rpx 28rpx;
  vertical-align: middle;
  width:50rpx;
  height: 50rpx;
}
.cominput {
  background-color: #FAFAFA;
  width:620rpx;
  margin: 10rpx 0rpx 5rpx 0rpx;
  padding: 20rpx 20rpx 20rpx 20rpx;
  height: 200rpx;
}
.cominputPlaceholder{
  color: #B4B4B4;
  font-size: small;
}
/*留言提交按钮*/
.button {
  width: 210rpx;
  height: 70rpx;
  background-color: #0F88EB;
  margin: 15rpx 0rpx 0rpx 5rpx;
  text-align: center;
  vertical-align: middle;
  border-radius: 5rpx;
  position: relative;
  margin-bottom: 40rpx;
}
.button text{
  color: #FEFEFE;
  font-size: small;
  font-weight: bolder;
}
/*留言显示部分*/
.criticisms {
  margin: 20rpx 10rpx 3rpx 10rpx;
  width: 680rpx;
  position: relative;
}
.username {
  display: block;
  width: 400rpx;
  font-size: middle;
  font-weight: bold;
  margin: 2rpx 0rpx 5rpx 0rpx;
}
.time {
  display: block;
  width: 300rpx;
  color: #caccd1;
  font-size: 30rpx;
}
.fab {
  width: 160rpx;
  height: 80rpx;
  padding: 0;
  position: absolute;
  top: 40rpx;
  right: 40rpx;
}
.fab image {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 7rpx;
  left: 20rpx;
}
.fab text {
  display: inline-block;
  position: absolute;
  width: 80rpx;
  top:8rpx;
  right: 10rpx;
  color: #0F88EB;
  font-size: medium;
  font-weight: bold;
}
.message {
  color: #555;
  display:  block;
  margin: 18rpx 2rpx 10rpx 2rpx;
  font-size: 36rpx;
  line-height: 150%;
  word-wrap: break-word;
}
.hr_Cm{
  height: 1rpx;
  width:100%;
  background-color: #caccd1;
  border-top: white solid 1rpx;
  border-bottom: #FFF solid 1rpx;
  opacity: 0.2;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}