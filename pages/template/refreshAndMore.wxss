.scroll_container{
  z-index: 0;
  position: fixed;
  top: 100rpx;
  left: 0;
  right: 0;
  bottom: 0;
}
.loadMore-block{
  z-index: 1;
  position: fixed;
  background-color:#e9e9e9; 
  width:100%;
  max-height: 200rpx;
  text-align: center;
  box-sizing: border-box;
  overflow: hidden;
  left: 0;
  right: 0;
  bottom: 0;
}
.loadMore-block .loading-text{
    color: #a2a2a2;
  position: relative;
  display: block;
  width: 100%;
  left: 0;
  right: 0;
  top: 15rpx;  
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: bold;
}  
.refresh-block {
  position: relative;
  background-color:rgba(0, 0, 0, 0.08) ;  
  width:100%;
  height: 0rpx;
  max-height: 200rpx;
  text-align: center;
  overflow: hidden;
}
.refresh-block .refreshing_text{
    color: #a2a2a2;
  position: absolute;
  display: block;
  width: 100%;
  left: 0;
  right: 0;
  bottom: 15rpx;  
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: bold;
}  